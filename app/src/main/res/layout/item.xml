<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1EFFFFFF"
    android:backgroundTint="#20FFFFFF">

    <androidx.cardview.widget.CardView
        android:id="@+id/ht"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:background="#1EFFFFFF"
        android:backgroundTint="#1EFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:background="#1EFFFFFF"
            android:backgroundTint="#1EFFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="234dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1EFFFFFF"
                android:backgroundTint="#1EFFFFFF"
                app:srcCompat="@drawable/jt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#1EFFFFFF"
                android:backgroundTint="#1EFFFFFF"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txtTam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/baloo"

                    android:text="300"
                    android:textColor="#863272"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1EFFFFFF"
                    android:backgroundTint="#1EFFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:fontFamily="monospace"
                        android:text="Quantidade: "
                        android:textColor="#F6EEEE"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtQtd"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo_bhai"
                        android:text="1"
                        android:textColor="#4CAF50"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:background="#1EFFFFFF"
                    android:backgroundTint="#1EFFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="46dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:text="R$: "
                        android:textColor="#EDE8E8"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtPreco"
                        android:layout_width="101dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/saira_stencil_one"
                        android:text="9,99"
                        android:textColor="#4CAF50"
                        android:textSize="30sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#1EFFFFFF"
                    android:backgroundTint="#1EFFFFFF"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textAcom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descrição:"
                        android:textColor="#0C0A0A"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>